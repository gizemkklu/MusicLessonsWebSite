
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminUI.cshtml";
}

    <div class="content-wrapper pb-0">
        <div class="page-header flex-wrap">
            <h3 class="mb-0">
                 İstatiklerimize bakalım!
            </h3>

        </div>
        <div class="row">
            <div class="col-xl-12 col-lg-1 stretch-card grid-margin">
                <div class="row ">
                <div class="col-xl-12 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                    <div class="card bg-warning">
                        <div class="card-body px-3 py-4">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="color-card">
                                    <p class="mb-0 color-card-head">Okunmuş Bildirim Sayısı</p>
                                    <h2 class="text-white">
                                        @ViewBag.Bildirim2
                                    </h2>
                                </div>
                                <i class="card-icon-indicator mdi mdi-bell-off bg-inverse-icon-warning"></i>
                            </div>
                          
                        </div>
                    </div>
                </div>
                    <div class="col-xl-12 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                        <div class="card bg-danger">
                            <div class="card-body px-3 py-4">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="color-card">
                                        <p class="mb-0 color-card-head">Okunmamış Bildirim Sayısı</p>
                                        <h2 class="text-white">
                                        @ViewBag.Bildirim
                                        </h2>
                                    </div>
                                <i class="card-icon-indicator mdi mdi-bell-ring bg-inverse-icon-danger"></i>
                                </div>
                               
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-12 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3 pb-lg-0 pb-xl-3">
                        <div class="card bg-primary">
                            <div class="card-body px-3 py-4">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="color-card">
                                        <p class="mb-0 color-card-head">Ders Sayısı</p>
                                        <h2 class="text-white">
                                        @ViewBag.Ders
                                        </h2>
                                </div>
                                <i class="card-icon-indicator mdi mdi-music bg-inverse-icon-primary"></i>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-12 col-md-6 stretch-card pb-sm-3 pb-lg-0">
                        <div class="card bg-success">
                            <div class="card-body px-3 py-4">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="color-card">
                                        <p class="mb-0 color-card-head">Eğitmen Sayısı</p>
                                    <h2 class="text-white">@ViewBag.teacher</h2>
                                    </div>
                                    <i class="card-icon-indicator mdi mdi-account-circle bg-inverse-icon-success"></i>
                                </div>
                            
                            </div>
                        </div>
                    </div>
                </div>
            </div>
         
        </div>

    </div>



