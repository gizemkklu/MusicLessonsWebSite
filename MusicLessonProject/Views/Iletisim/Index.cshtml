@model SendMessageViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MUsicUI.cshtml";
}

<header class="site-header d-flex flex-column justify-content-center align-items-center">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-12 text-center">

                <h2 class="mb-0">İletişim Sayfası</h2>
            </div>

        </div>
    </div>
</header>


        <section class="section-padding" id="section_2">
            <div class="container">
                <div class="row justify-content-center">

                    <div class="col-lg-5 col-12 pe-lg-5">
                        <div class="contact-info">
                            <h3 class="mb-4">Sizlere yardımcı olmak istiyoruz.</h3>

                            <p class="d-flex border-bottom pb-3 mb-4">
                                <strong class="d-inline me-4">Telefon:</strong>
                                <span>010-020-0340</span>
                            </p>

                            <p class="d-flex border-bottom pb-3 mb-4">
                                <strong class="d-inline me-4">Email:</strong>
                                <a href="#">inquiry@pod.co</a>
                            </p>

                            <p class="d-flex">
                                <strong class="d-inline me-4">Konum:</strong>
                                <span>1355 Market Street, Downtown San Francisco, California</span>
                            </p>
                        </div>
                    </div>

                    <div class="col-lg-5 col-12 mt-5 mt-lg-0">
                        <iframe class="google-map"
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3988.819917806043!2d103.84793601429608!3d1.281807962148459!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31da190c2c94ccb3%3A0x11213560829baa05!2sTwitter!5e0!3m2!1sen!2smy!4v1669212183861!5m2!1sen!2smy"
                            width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>

                </div>
            </div>
        </section>

        <section class="contact-section section-padding pt-0">
            <div class="container">
                <div class="row">

                    <div class="col-lg-8 col-12 mx-auto">
                        <div class="section-title-wrap mb-5">
                            <h4 class="section-title">Bilgi almak için formu doldurunuz</h4>
                        </div>

                        <form  method="post" class="custom-form contact-form">
                            <div class="row">
                                
                                <div class="col-lg-6 col-md-6 col-12">
                                    <div class="form-floating">
                                        <input type="text" asp-for="Name" class="form-control" placeholder="Ad" required="">                                              
                                        <label for="Name">Ad</label>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-12">
                                    <div class="form-floating">
                                        <input type="text" asp-for="Surname" class="form-control" placeholder="Soyad" required="">
                                        <label for="Surname">Soyad</label>
                                        <span asp-validation-for="Surname" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-12">
                                    <div class="form-floating">
                                        <input type="email" asp-for="Mail" class="form-control" placeholder="Email Adresi" required="">
                                        <label for="Mail">Email Adresi</label>
                                        <span asp-validation-for="Mail" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-12">
                                    <div class="form-floating">
                                        <input type="text" asp-for="Phone" class="form-control" placeholder="Telefon Numarası" required="">
                                        <label for="Phone">Telefon Numarası</label>
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-12">
                                        <select class="form-select" aria-label="Default select example" asp-for="Subject">
                                            <option selected disabled>Ders Seçiniz</option>
                                            <option value="Keman">Keman</option>
                                            <option value="Gitar">Gitar</option>
                                            <option value="Piyano">Piyano</option>
                                            <option value="Bağlama">Bağlama</option>
                                        </select>
                                        <span asp-validation-for="Subject" class="text-danger"></span>
                                        <br />
                                        <div class="form-floating">
                                             <textarea class="form-control" asp-for="MessageContent" placeholder="Mesajınızı yazınız"></textarea>                                              
                                             <label for="MessageContent">Mesajınızı yazınız</label>
                                            <span asp-validation-for="MessageContent" class="text-danger"></span>
                                        </div>
                                </div>

                                <div class="col-lg-4 col-12 ms-auto">
                            <button type="submit" class="form-control" id="ContactBtn" onclick="return confirm('En kısa zamanda bilgilendirileceksiniz ilginiz için teşekkür eder iyi günler dileriz :)')">Gönder</button>
                                </div>
                                
                            </div>
                        </form>
                       
                    </div>
            
                </div>
            </div>

        </section>

       
