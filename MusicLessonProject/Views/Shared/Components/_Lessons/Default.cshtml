@using Entities.Entities
@model List<Lesson>

<section class="trending-podcast-section section-padding">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-12">
                <div class="section-title-wrap mb-5">
                    <h4 class="section-title">Derslerimiz</h4>
                </div>
            </div>

            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-12 mb-4 mb-lg-0">
                    <div class="custom-block custom-block-full">
                    <div class="custom-block-image-wrap">
                            <a asp-controller="Studys" asp-action="LessonDetails" asp-route-id="@item.LessonId">
                            <img src="@item.img_Url" class="custom-block-image img-fluid"
                                 alt="">
                        </a>
                    </div>
                
                        <div class="custom-block-info">
                            <h5 class="mb-2">
                                <a asp-controller="Studys" asp-action="LessonDetails" asp-route-id="@item.LessonId">
                                    @item.Name
                                </a>
                            </h5>

                            <div class="profile-block d-flex">
                                <a asp-controller="Studys" asp-action="LessonDetails" asp-route-id="@item.LessonId">
                                    <img src="/music/images/profile/@item.teacher.img_Url" class="profile-block-image img-fluid" alt="">                                         
                                </a>

                                <p>
                                    @item.teacher.Name  @item.teacher.Surname
                                   
                                    <strong>@item.teacher.About</strong>
                                </p>
                            </div>



                        </div>
                    </div>
                    <br />
                </div>
               
            }



             
         

        </div>
    </div>
</section>